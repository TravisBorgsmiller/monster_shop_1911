<h1 align = "center">Merchants</h1>
<section class = "grid-container">
  <% @merchants.each do |merchant|%>
    <section class = "grid-item">
      <% if merchant.enabled? %>
        <section id="merchant-<%= merchant.id %>">
          <h2><%=link_to merchant.name, "/merchants/#{merchant.id}"%></h2>
          <%= merchant.city %>
          <%= merchant.address %>
          <%= merchant.state %>
          <%= merchant.zip %>
        </section>
      <% end %><br><br>
    </section>
  <% end %>
</section>