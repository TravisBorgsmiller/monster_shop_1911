<%= form_tag "/users", method: :post do %>

  <% if !session[:failed_registration]  %> 
      <%= label_tag :name %>
      <%= text_field_tag :name  %>
      <%= label_tag :street_address %>
      <%= text_field_tag :street_address %>
      <%= label_tag :city %>
      <%= text_field_tag :city %>
      <%= label_tag :state %>
      <%= text_field_tag :state %>
      <%= label_tag :zip_code %>
      <%= text_field_tag :zip_code %>
      <%= label_tag :email %>
      <%= text_field_tag :email %> <br> <br> 
      <%= label_tag :password %>
      <%= password_field_tag :password %> <br> <br>
      <%= label_tag :confirm_password %>
      <%= password_field_tag :password_confirmation %>
  <% else %> 
      <%= label_tag :name %>
      <%= text_field_tag :name, session[:failed_registration]["name"] %>
      <%= label_tag :street_address %>
      <%= text_field_tag :street_address, session[:failed_registration]["street_address"] %>
      <%= label_tag :city %>
      <%= text_field_tag :city, session[:failed_registration]["city"] %>
      <%= label_tag :state %>
      <%= text_field_tag :state, session[:failed_registration]["state"]  %>
      <%= label_tag :zip_code %>
      <%= text_field_tag :zip_code, session[:failed_registration]["zip_code"]  %>
      <%= label_tag :email %>
      <%= text_field_tag :email %> <br> <br> 
      <%= label_tag :password %>
      <%= password_field_tag :password %> <br> <br>
      <%= label_tag :confirm_password %>
      <%= password_field_tag :password_confirmation %>
  <% end %>   

<%= submit_tag "Create User" %>
  
<% end %>