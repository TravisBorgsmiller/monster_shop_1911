<center>
  <%= form_for @item, url: merchant_post_items_path(@item), html: { method: :patch } do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, :value => @item[:name] %>

    <%= f.label :description %>
    <%= f.text_field :description, :value => @item[:description] %>

    <%= f.label :price %>
    <%= f.text_field :price, :value => @item[:price] %>

    <%= f.label :image %>
    <%= f.text_field :image, :value => @item[:image] %>

    <%= f.label :inventory %>
    <%= f.text_field :inventory, :value => @item[:inventory] %>

    <%= f.submit("Update Item") %>

  <% end %>

</center>
