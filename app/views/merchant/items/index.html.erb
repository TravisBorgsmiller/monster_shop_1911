<h1>All Items</h1>

<section class="grid-container">
  <% @merchant.items.each do |item| %>
  <section class = "grid-item" id= 'item-<%=item.id%>'>
    <h2> <%=link_to item.name, "/items/#{item.id}" %> </h2>
    <% if !@merchant.item_ordered?(item) %> 
      <%=link_to "Delete", "/merchant/items/#{item.id}", method: :delete %> 
    <% end %>

    <p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
    <%= link_to image_tag(item.image), "items/#{item.id}" %>
    <p> <%= item.description unless @merchant%> </p>
    <p>Price: <%=number_to_currency(item.price) %> </p>
    <p>Inventory: <%= item.inventory %> </p>
    <% if !@merchant %>
    <% end %>
    <% if item.active? %>
    <p>Active</p>
    <% else %>
    <p>Inactive</p>
    <% end %>
  </section>
  <% end %>
</section>

<p> the most popular items are : <%= Item.most_popular_items.join(", ") %> </p>
<p> the least popular items are : <%= Item.least_popular_items.join(", ") %> </p>