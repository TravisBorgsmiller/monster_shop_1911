<h1>User Orders</h1>

<p>
  <%= @orders.each do |order| %>
    <section id= <%= "order-#{order.id}"%> >
      <h2><%= order.name %><h3/>
        <%= order.address %>
        <%= order.city %>
        <%= order.state %>
        <%= order.zip %>
        <% order.items.each do |item| %>
          <section id= <%= "item-#{item.id}" %>>
          <% if item.merchant_id == self.current_user.merchant_id %>
            <%= item.name %>
            <%= item.image %>
            <%= item.price %>
            <%= "Number of Items: #{item.item_orders[0].quantity}" %>
          </section>
          <% end %>
        <% end %>
    </section>
  <% end %>
</p>
