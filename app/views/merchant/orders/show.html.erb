<h1>User Orders</h1>

<p>
  <%= @orders.each do |order| %>
    <section id= <%= "order-#{order.id}"%> >
      <h2><%= order.name %><h3/>
        <%= order.address %>
        <%= order.city %>
        <%= order.state %>
        <%= order.zip %>
        <% order.items.each do |item| %>
          <section id= <%= "item-#{item.id}" %>>
          <% if item.merchant_id == self.current_user.merchant_id %>
            <%= item.name %>
            <%= item.image %>
            <%= item.price %>
            <%= "Number of Items: #{item.item_orders[0].quantity}" %>
            <%= item.item_orders[0].status.capitalize %>
            <% if item.item_orders[0].quantity <= item.inventory && item.item_orders[0].unfulfilled? %>
              <%= button_to "Fulfill", "/item_orders/#{item.item_orders[0].id}", params: {fulfill: "fulfill"}, method: :patch %>
            <% else %>
              <%= "Can not fulfill this item" %>
            <% end %>
          </section>
          <% end %>
        <% end %>
    </section>
  <% end %>
</p>
