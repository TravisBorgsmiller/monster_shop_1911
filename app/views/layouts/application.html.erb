<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
     <% if current_merchant %>
       <%= render "partial/merchantnav" %>
     <% elsif current_admin %>
       <%= render "partial/adminnav" %>
     <% elsif current_user %>
       <%= render "partial/currentusernav" %>
     <% else %>
       <%= render "partial/visitornav" %>
     <% end %>
   </nav>

    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
